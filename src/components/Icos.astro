---
interface Props {
	icon: string;
	body: string;
	href: string;
}

const { href, icon, body } = Astro.props;
---
	  
	  <li class="link-card">
		  <a href={href}>
			  <h2 class= {icon + " size-8 "}>
				  
				  <span>&rarr;</span>
			  </h2>
			  <p>
				  {body}
			  </p>
		  </a>
		  <div class="h-6 w-full">

		  </div>
	  </li>
	  <style>
		.link-card {
		list-style: none;
		display: contents;
		padding: 1px;
		background-color: #23262d;
		background-image: none;
		background-size: 400%;
		border-radius: 7px;
		background-position: 100%;
		transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
		box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
		width: 100%;
		height: 100%;
	
	}
	.link-card > a {
		width: 50%; 
		border-radius: 8px;
		color: white;
		background-color: rgb(35, 38, 45);
		
		text-decoration: none;
		line-height: 1.4em;
		padding: calc(1.5em - 1px);

		opacity: 0.8;

	}
	h2 {
		margin: 0;
		font-size: 1.25rem;
		transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
	}
	p {
		margin-top: 0.5rem;
		margin-bottom: 0;
	}

	.link-card:is(:hover, :focus-within) a {
		color: rgb(var(--accent-light));
		background-color:rgba(35, 38, 45, 0.6);
		height: 150%;
		width: 150%; 
	}

	  </style>
	  
